<div id="new_message">

  <%= form_for [@contact, @message], remote: true do |f| %>
    <%= f.label :to %>
    <%= f.text_field :to, value: @contact.phone_number %>
    <%= f.label :from %>
    <%= f.text_field :from, value: "15005550006" %>
    <%= f.label :body %>
    <%= f.text_field :body %><br>
    <%= f.submit "Send", class: "button" %>
  <% end %>

</div>
