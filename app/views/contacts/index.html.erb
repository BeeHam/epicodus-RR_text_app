<h1>Contacts</h1>

<ul>
  <% @contacts.each do |contact| %>
  <li>
    <%= link_to contact.name, contact_path(contact) %>, <%= contact.phone_number %>
    <%= link_to "Edit", edit_contact_path(contact) %>
    <%= link_to "Delete", contact_path(contact),
                          data: { confirm: "Are you sure?",
                          method: "delete" } %>
  </li>
  <% end %>
</ul>

<%= link_to "Add a contact", new_contact_path %> | <%= link_to "Home", root_path %>
